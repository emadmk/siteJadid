# ============================================
# DOCKER ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env before running docker-compose
# Generate all secrets with: ./scripts/generate-secrets.sh
# NEVER commit .env to git!
# ============================================

# Database (REQUIRED - min 20 chars, mixed case + numbers + symbols)
DB_PASSWORD=CHANGE_ME_RUN_GENERATE_SECRETS_SCRIPT
POSTGRES_PASSWORD=CHANGE_ME_RUN_GENERATE_SECRETS_SCRIPT

# Redis (REQUIRED)
REDIS_PASSWORD=CHANGE_ME_RUN_GENERATE_SECRETS_SCRIPT

# Elasticsearch (REQUIRED for prod)
ELASTICSEARCH_PASSWORD=CHANGE_ME_RUN_GENERATE_SECRETS_SCRIPT

# NextAuth (REQUIRED - generate with: openssl rand -base64 32)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=CHANGE_ME_RUN_GENERATE_SECRETS_SCRIPT

# Stripe
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yoursite.com

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1
