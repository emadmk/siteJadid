// ============================================
// ADVANCED SEARCH (Algolia Integration)
// ============================================

model AlgoliaSettings {
  id              String   @id @default(cuid())

  // API Credentials
  applicationId   String
  adminApiKey     String   // For indexing (encrypted)
  searchApiKey    String   // For search operations

  // Indices
  productIndexName String  @default("products")
  categoryIndexName String @default("categories")

  // Search Settings
  enableTypoTolerance Boolean @default(true)
  enableSynonyms    Boolean   @default(true)
  enableRules       Boolean   @default(true)

