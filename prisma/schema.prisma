}

model ErrorLog {
  id              String        @id @default(cuid())

  // Error Info
  message         String
  stack           String?

  // Severity
  level           ErrorSeverity @default(ERROR)

  // Context
  environment     String        @default("production")
  release         String?

  // Request Info
  url             String?
  method          String?
  headers         String?       // JSON
  body            String?       // JSON

  // User Info
  userId          String?
  userEmail       String?
  ipAddress       String?
  userAgent       String?

