  EXCHANGE
  REPAIR
  STORE_CREDIT
}

enum ReturnReason {
  DEFECTIVE
  WRONG_ITEM
  NOT_AS_DESCRIBED
  DAMAGED_SHIPPING
  CHANGED_MIND
  ORDERED_BY_MISTAKE
  BETTER_PRICE
  NO_LONGER_NEEDED
  OTHER
}

model RMA {
