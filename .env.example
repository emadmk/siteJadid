# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Enterprise E-commerce Platform"

# Database - PostgreSQL
DATABASE_URL="postgresql://ecommerce_user:ecommerce_password@localhost:5432/ecommerce_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Elasticsearch
ELASTICSEARCH_NODE="http://localhost:9200"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-change-this-in-production

# Stripe Payment (Development Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (SMTP)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Shipping API Keys (Optional - Use sandbox/test keys)
USPS_USER_ID=your_usps_user_id
FEDEX_ACCOUNT_NUMBER=your_fedex_account
FEDEX_API_KEY=your_fedex_api_key
UPS_ACCESS_KEY=your_ups_access_key

# GSA Advantage Configuration
GSA_CONTRACT_NUMBER=GS-00F-00000
GSA_VENDOR_ID=your_vendor_id

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./public/uploads

# Session
SESSION_MAX_AGE=2592000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Feature Flags
ENABLE_B2B=true
ENABLE_B2C=true
ENABLE_GSA=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_REVIEWS=true
