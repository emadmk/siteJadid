# ============================================
# ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in the values
# Generate secrets with: ./scripts/generate-secrets.sh
# NEVER commit .env to git!
# ============================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Enterprise E-commerce Platform"

# Database - PostgreSQL
# IMPORTANT: Use a strong password (min 20 chars, mixed case + numbers + symbols)
DATABASE_URL="postgresql://siteuser:CHANGE_ME_STRONG_PASSWORD@localhost:5432/sitejadid?schema=public"

# Redis
# IMPORTANT: Include password in URL for authentication
REDIS_URL="redis://:CHANGE_ME_STRONG_PASSWORD@localhost:6379"
REDIS_PASSWORD="CHANGE_ME_STRONG_PASSWORD"

# Elasticsearch
ELASTICSEARCH_NODE="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="CHANGE_ME_STRONG_PASSWORD"

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# Stripe Payment (Development Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (SMTP)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Shipping API Keys (Optional - Use sandbox/test keys)
USPS_USER_ID=your_usps_user_id
FEDEX_ACCOUNT_NUMBER=your_fedex_account
FEDEX_API_KEY=your_fedex_api_key
UPS_ACCESS_KEY=your_ups_access_key

# GSA Advantage Configuration
GSA_CONTRACT_NUMBER=GS-00F-00000
GSA_VENDOR_ID=your_vendor_id

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./public/uploads

# Session (7 days = 604800 seconds)
SESSION_MAX_AGE=604800

# Encryption Key for API keys at rest
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_HEX

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Feature Flags
ENABLE_B2B=true
ENABLE_B2C=true
ENABLE_GSA=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_REVIEWS=true
